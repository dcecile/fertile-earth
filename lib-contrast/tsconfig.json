{
  "compilerOptions": {
    "declarationDir": "./build/tsc",
    "paths": {
      "@/*.css": ["./*.css"],
      "@/*.html": ["./*.html"],
      "@/*.sql": ["./*.sql"],
      "@/*.ts": ["./*.ts"],
      "@/*.txt": ["./*.txt"]
    },
    "tsBuildInfoFile": "build/tsc/tsconfig.tsbuildinfo"
  },
  "exclude": ["build/**", "node_modules/**"],
  "extends": "@intertwine/dev-tsconfig/tsconfig.json",
  "include": ["./**/*.ts", "./**/*.js", "./**/*.cjs"],
  "references": [
    { "path": "../lib-collection" },
    { "path": "../lib-test" }
  ]
}
