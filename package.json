{
  "engines": {
    "node": "^15.10.0"
  },
  "type": "module",
  "scripts": {
    "build": "node --experimental-loader ./loader.js bin/build.ts",
    "check-eslint": "eslint --ignore-path .gitignore --max-warnings 0 .",
    "check-prettier": "prettier --ignore-path .gitignore --plugin ./tiny/core/prettier-plugin-cockroach.cjs --check '**/*.cjs' '**/*.js' '**/*.json' '**/*.ts' '**/*.html' '**/*.md' '**/*.yaml' '!pnpm-lock.yaml' '**/*.sql'",
    "check-tsc": "tsc",
    "db": "dbmate --url ${DATABASE_URL_ADMIN}",
    "dev": "node --experimental-loader ./loader.js bin/dev.ts",
    "fix": "eslint --ignore-path .gitignore --fix .",
    "fmt": "prettier --ignore-path .gitignore --plugin ./tiny/core/prettier-plugin-cockroach.cjs --write '**/*.cjs' '**/*.js' '**/*.json' '**/*.ts' '**/*.html' '**/*.md' '**/*.yaml' '!pnpm-lock.yaml' '**/*.sql'",
    "sql": "cockroach sql --url ${DATABASE_URL_API_WRITE}",
    "sql-admin": "cockroach sql --url ${DATABASE_URL_ADMIN}",
    "start": "pnpm build && NODE_ENV=production NODE_OPTIONS=\"${NODE_OPTIONS_RELEASE}\" PORT=\"${DEV_PORT}\" node build/node/api/index.ts.mjs",
    "start-db": "cockroach start-single-node --certs-dir=.crdb/certs --store=.crdb/node --listen-addr=localhost:${DB_PORT} --http-addr=localhost:8257 --background --pid-file .crdb/node.pid",
    "stop-db": "kill $(cat .crdb/node.pid)",
    "test": "node --experimental-loader ./loader.js bin/test.ts",
    "watch": "tsc --watch"
  },
  "dependencies": {
    "@types/pg": "^7.14.11",
    "chalk": "^4.1.0",
    "cookie": "^0.4.1",
    "jsdom": "^16.5.1",
    "pg": "^8.5.1",
    "pg-connection-string": "^2.4.0",
    "sodium-native": "^3.2.1"
  },
  "devDependencies": {
    "@sinonjs/fake-timers": "^7.0.2",
    "@types/cookie": "^0.4.0",
    "@types/diff": "^5.0.0",
    "@types/http-proxy": "^1.17.5",
    "@types/jsdom": "^16.2.7",
    "@types/lodash-es": "^4.17.4",
    "@types/ms": "^0.7.31",
    "@types/node": "^14.14.35",
    "@types/picomatch": "^2.2.1",
    "@types/sinonjs__fake-timers": "^6.0.2",
    "@types/sodium-native": "^2.3.5",
    "@types/ws": "^7.4.0",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "bufferutil": "^4.0.3",
    "chokidar": "^3.5.1",
    "diff": "^5.0.0",
    "esbuild": "^0.9.6",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "fast-mersenne-twister": "^1.0.3",
    "http-proxy": "^1.18.1",
    "lodash-es": "^4.17.21",
    "ms": "^2.1.3",
    "picomatch": "^2.2.2",
    "prettier": "^2.2.1",
    "type-fest": "^0.21.3",
    "typescript": "^4.1.5",
    "utf-8-validate": "^5.0.4",
    "ws": "^7.4.4"
  },
  "prettier": {
    "printWidth": 60,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "pnpm": {
    "neverBuiltDependencies": [
      "fsevents"
    ]
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "tsconfigRootDir": ".",
      "project": [
        "./tsconfig.json"
      ],
      "extraFileExtensions": [
        ".cjs"
      ]
    },
    "plugins": [
      "import",
      "simple-import-sort",
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "prettier"
    ],
    "rules": {
      "no-constant-condition": [
        "error",
        {
          "checkLoops": false
        }
      ],
      "import/extensions": [
        "warn",
        "always"
      ],
      "import/first": "warn",
      "import/newline-after-import": "warn",
      "import/no-default-export": "error",
      "import/no-duplicates": "warn",
      "simple-import-sort/imports": "warn",
      "@typescript-eslint/naming-convention": [
        "warn",
        {
          "selector": "default",
          "format": [
            "strictCamelCase"
          ],
          "leadingUnderscore": "forbid",
          "trailingUnderscore": "forbid"
        },
        {
          "selector": "parameter",
          "modifiers": [
            "unused"
          ],
          "format": [
            "strictCamelCase"
          ],
          "leadingUnderscore": "require",
          "trailingUnderscore": "forbid"
        },
        {
          "selector": "typeLike",
          "format": [
            "StrictPascalCase"
          ],
          "leadingUnderscore": "forbid",
          "trailingUnderscore": "forbid"
        }
      ],
      "@typescript-eslint/member-delimiter-style": [
        "error",
        {
          "multiline": {
            "delimiter": "none"
          }
        }
      ],
      "@typescript-eslint/no-implicit-any-catch": [
        "warn"
      ],
      "@typescript-eslint/no-implied-eval": [
        "off"
      ],
      "@typescript-eslint/no-use-before-define": [
        "warn",
        {
          "functions": false
        }
      ],
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "@typescript-eslint/consistent-type-imports": [
        "warn"
      ]
    }
  }
}
