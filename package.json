{
  "type": "module",
  "scripts": {
    "build": "node --experimental-loader ./lib/loader/index.js lib/build_/index.ts",
    "check-fmt": "prettier --ignore-path .gitignore --check '**/*.cjs' '**/*.js' '**/*.json' '**/*.ts' '**/*.html' '**/*.md' '**/*.yaml' '!pnpm-lock.yaml' && dprint check",
    "check-lint": "eslint --ignore-path .gitignore --max-warnings 0 --ext ts,js,cjs . && syncpack lint",
    "check-tsc": "tsc",
    "db": "dbmate --url ${DATABASE_URL_ADMIN}",
    "dev": "node --experimental-loader ./lib/loader/index.js lib/local/index.ts",
    "fix-lint": "eslint --ignore-path .gitignore --fix --ext ts,js,cjs .",
    "fmt": "syncpack format && prettier --ignore-path .gitignore --write '**/*.cjs' '**/*.js' '**/*.json' '**/*.ts' '**/*.html' '**/*.md' '**/*.yaml' '!pnpm-lock.yaml' && dprint fmt",
    "start": "pnpm build && NODE_ENV=production NODE_OPTIONS=\"${NODE_OPTIONS_RELEASE}\" APP_PORT=\"${APP_DEV_PORT}\" node build/node/app/src/api/index.ts.mjs",
    "test": "node --experimental-loader ./lib/loader/index.js service/auth/guest/display/test.ts",
    "watch": "tsc --watch"
  },
  "dependencies": {
    "@intertwine/eslint-config": "workspace:*",
    "@intertwine/prettier": "workspace:*",
    "@intertwine/style": "workspace:*",
    "chalk": "5.3.0",
    "formdata-polyfill": "4.0.10",
    "jsdom": "22.1.0",
    "ms": "2.1.3",
    "node-fetch": "3.3.2",
    "sodium-native": "4.0.4"
  },
  "devDependencies": {
    "@sinonjs/fake-timers": "11.1.0",
    "@types/diff": "5.0.3",
    "@types/jsdom": "21.1.2",
    "@types/lodash-es": "4.17.9",
    "@types/ms": "0.7.31",
    "@types/node": "20.5.9",
    "@types/sinonjs__fake-timers": "8.1.2",
    "@types/sodium-native": "2.3.5",
    "@types/ws": "8.5.5",
    "@typescript-eslint/eslint-plugin": "6.5.0",
    "@typescript-eslint/parser": "6.5.0",
    "chokidar": "3.5.3",
    "diff": "5.1.0",
    "esbuild": "0.19.2",
    "eslint": "8.48.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-import": "2.28.1",
    "eslint-plugin-prettier": "5.0.0",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "fast-mersenne-twister": "1.0.3",
    "lodash-es": "4.17.21",
    "prettier": "3.0.3",
    "syncpack": "11.2.1",
    "type-fest": "4.3.1",
    "typescript": "5.2.2",
    "ws": "8.13.0"
  },
  "eslintConfig": {
    "extends": [
      "@intertwine"
    ]
  },
  "pnpm": {
    "neverBuiltDependencies": [
      "fsevents"
    ]
  },
  "prettier": "@intertwine/prettier/index.json",
  "syncpack": {
    "sortFirst": [
      "name",
      "type",
      "scripts",
      "dependencies",
      "devDependencies"
    ],
    "versionGroups": [
      {
        "label": "Please use dev or prod dependencies",
        "packages": [
          "**"
        ],
        "dependencies": [
          "**"
        ],
        "dependencyTypes": [
          "local",
          "overrides",
          "peer",
          "pnpmOverrides",
          "resolutions"
        ],
        "isBanned": true
      }
    ]
  }
}
