{
  "engines": {
    "node": "^15.10.0"
  },
  "type": "module",
  "scripts": {
    "build": "node --experimental-loader ./loader.js build.ts",
    "check-eslint": "eslint --ignore-path .gitignore --max-warnings 0 .",
    "check-tsc": "tsc",
    "check-prettier": "prettier --ignore-path .gitignore --check '**/*.js' '**/*.json' '**/*.ts' '**/*.html' '**/*.md'",
    "fix": "eslint --ignore-path .gitignore --fix .",
    "fmt": "prettier --ignore-path .gitignore --write '**/*.js' '**/*.json' '**/*.ts' '**/*.html' '**/*.md'",
    "dev": "node --experimental-loader ./loader.js dev.ts",
    "watch": "tsc --watch"
  },
  "dependencies": {
    "chai": "^4.3.0",
    "chai-dom": "^1.8.2",
    "jsdom": "^16.4.0",
    "picomatch": "^2.2.2",
    "pretty-ms": "^7.0.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.15",
    "@types/chai-dom": "^0.0.10",
    "@types/jsdom": "^16.2.6",
    "@types/node": "^14.14.31",
    "@types/picomatch": "^2.2.1",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "esbuild": "^0.8.54",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "prettier": "^2.2.1",
    "typescript": "^4.1.5 <4.2.0",
    "utility-types": "^3.10.0"
  },
  "prettier": {
    "printWidth": 60,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "pnpm": {
    "neverBuiltDependencies": [
      "fsevents"
    ]
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "tsconfigRootDir": ".",
      "project": [
        "./tsconfig.json"
      ],
      "extraFileExtensions": [
        ".cjs"
      ]
    },
    "plugins": [
      "import",
      "simple-import-sort",
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "prettier"
    ],
    "rules": {
      "import/extensions": [
        "warn",
        "always"
      ],
      "import/first": "warn",
      "import/newline-after-import": "warn",
      "import/no-default-export": "error",
      "import/no-duplicates": "warn",
      "simple-import-sort/imports": "warn",
      "@typescript-eslint/naming-convention": [
        "warn",
        {
          "selector": "default",
          "format": [
            "strictCamelCase"
          ],
          "leadingUnderscore": "forbid",
          "trailingUnderscore": "forbid"
        },
        {
          "selector": "typeLike",
          "format": [
            "StrictPascalCase"
          ],
          "leadingUnderscore": "forbid",
          "trailingUnderscore": "forbid"
        }
      ],
      "@typescript-eslint/member-delimiter-style": [
        "error",
        {
          "multiline": {
            "delimiter": "none"
          }
        }
      ],
      "@typescript-eslint/no-use-before-define": [
        "warn",
        {
          "functions": false
        }
      ],
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  }
}
