{
  "engines": {
    "node": "^17.3.0",
    "pnpm": "^6.24.4"
  },
  "type": "module",
  "scripts": {
    "build": "node --experimental-loader ./loader.js app/bin/build.ts",
    "check-fmt": "prettier --ignore-path .gitignore --plugin ./prettier-plugin-cockroach.cjs --check '**/*.cjs' '**/*.js' '**/*.json' '**/*.ts' '**/*.html' '**/*.md' '**/*.yaml' '!pnpm-lock.yaml' '**/*.sql' && dprint check",
    "check-lint": "eslint --ignore-path .gitignore --max-warnings 0 --ext ts,js,cjs .",
    "check-tsc": "tsc",
    "db": "dbmate --url ${DATABASE_URL_ADMIN}",
    "dev": "node --experimental-loader ./loader.js app/bin/dev.ts",
    "fix-lint": "eslint --ignore-path .gitignore --fix --ext ts,js,cjs .",
    "fmt": "prettier --ignore-path .gitignore --plugin ./prettier-plugin-cockroach.cjs --write '**/*.cjs' '**/*.js' '**/*.json' '**/*.ts' '**/*.html' '**/*.md' '**/*.yaml' '!pnpm-lock.yaml' '**/*.sql' && dprint fmt",
    "import-basic": "cat db/src/example/basic.sql | cockroach sql --url ${DATABASE_URL_API_WRITE} --echo-sql",
    "sql": "cockroach sql --url ${DATABASE_URL_API_WRITE}",
    "sql-admin": "cockroach sql --url ${DATABASE_URL_ADMIN}",
    "start": "pnpm build && NODE_ENV=production NODE_OPTIONS=\"${NODE_OPTIONS_RELEASE}\" APP_PORT=\"${APP_DEV_PORT}\" node build/node/app/src/api/index.ts.mjs",
    "start-db": "cockroach start-single-node --certs-dir=.crdb/certs --store=.crdb/node --listen-addr=localhost:26257 --http-addr=localhost:8257 --background --pid-file .crdb/node.pid",
    "stop-db": "kill $(cat .crdb/node.pid)",
    "test": "node --experimental-loader ./loader.js app/bin/test.ts",
    "watch": "tsc --watch"
  },
  "dependencies": {
    "chalk": "^5.0.0",
    "cookie": "^0.4.1",
    "formdata-polyfill": "^4.0.10",
    "jsdom": "^19.0.0",
    "ms": "^2.1.3",
    "node-fetch": "^3.1.0",
    "pg": "^8.7.1",
    "pg-connection-string": "^2.5.0",
    "sodium-native": "^3.3.0"
  },
  "devDependencies": {
    "@sinonjs/fake-timers": "^8.1.0",
    "@types/cookie": "^0.4.1",
    "@types/diff": "^5.0.1",
    "@types/http-proxy": "^1.17.8",
    "@types/jsdom": "^16.2.13",
    "@types/lodash-es": "^4.17.5",
    "@types/ms": "^0.7.31",
    "@types/node": "^17.0.1",
    "@types/pg": "^8.6.2",
    "@types/picomatch": "^2.3.0",
    "@types/prettier": "^2.4.2",
    "@types/sinonjs__fake-timers": "^8.1.1",
    "@types/sodium-native": "^2.3.5",
    "@types/ws": "^8.2.2",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "bufferutil": "^4.0.5",
    "chokidar": "^3.5.2",
    "diff": "^5.0.0",
    "dprint": "^0.19.1",
    "esbuild": "^0.14.5",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "fast-mersenne-twister": "^1.0.3",
    "http-proxy": "^1.18.1",
    "lodash-es": "^4.17.21",
    "picomatch": "^2.3.0",
    "prettier": "^2.5.1",
    "type-fest": "^2.8.0",
    "typescript": "^4.5.4",
    "utf-8-validate": "^5.0.7",
    "ws": "^7.5.6"
  },
  "prettier": {
    "printWidth": 60,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "pnpm": {
    "neverBuiltDependencies": [
      "fsevents"
    ]
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "tsconfigRootDir": ".",
      "project": [
        "./tsconfig.json"
      ],
      "extraFileExtensions": [
        ".cjs"
      ]
    },
    "plugins": [
      "import",
      "simple-import-sort",
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "prettier"
    ],
    "rules": {
      "no-constant-condition": [
        "error",
        {
          "checkLoops": false
        }
      ],
      "import/extensions": [
        "warn",
        "always",
        {
          "ignorePackages": true
        }
      ],
      "import/first": "warn",
      "import/newline-after-import": "warn",
      "import/no-default-export": "error",
      "import/no-duplicates": "warn",
      "simple-import-sort/imports": "warn",
      "@typescript-eslint/naming-convention": [
        "warn",
        {
          "selector": "default",
          "format": [
            "strictCamelCase"
          ],
          "leadingUnderscore": "forbid",
          "trailingUnderscore": "allow"
        },
        {
          "selector": "parameter",
          "modifiers": [
            "unused"
          ],
          "format": [
            "strictCamelCase"
          ],
          "leadingUnderscore": "require",
          "trailingUnderscore": "allow"
        },
        {
          "selector": "typeLike",
          "format": [
            "StrictPascalCase"
          ],
          "leadingUnderscore": "forbid",
          "trailingUnderscore": "allow"
        }
      ],
      "@typescript-eslint/member-delimiter-style": [
        "error",
        {
          "multiline": {
            "delimiter": "none"
          }
        }
      ],
      "@typescript-eslint/no-implicit-any-catch": [
        "off"
      ],
      "@typescript-eslint/no-implied-eval": [
        "off"
      ],
      "@typescript-eslint/no-use-before-define": [
        "warn",
        {
          "functions": false,
          "variables": false
        }
      ],
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "@typescript-eslint/consistent-type-imports": [
        "warn"
      ]
    }
  }
}
