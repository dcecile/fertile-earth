{
  "include": [
    "app/**/*.ts",
    "db/**/*.sql",
    "global.d.ts",
    "loader.js",
    "prettier-plugin-cockroach.cjs",
    "suppress.cjs",
    "tiny/**/*.ts"
  ],
  "compilerOptions": {
    "allowUnreachableCode": false,
    "allowJs": true,
    "alwaysStrict": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "lib": ["dom", "dom.iterable", "es2020", "scripthost"],
    "module": "es2020",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@db/*.sql": ["./db/src/*.sql"],
      "@fe/*.ts": ["./app/src/*.ts"],
      "@fe-bin/*.ts": ["./app/bin/*.ts"],
      "@sinonjs/fake-timers": [
        "./node_modules/@types/sinonjs__fake-timers"
      ],
      "@tiny/*.ts": ["./tiny/src/*.ts"],
      "sinonx": ["./node_modules/@types/sinon"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2020",
    "types": ["node"]
  }
}
