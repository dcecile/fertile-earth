{
  "extends": "@intertwine/tsconfig/tsconfig.json",
  "include": [
    "global.d.ts",
    "lib/**/*.ts",
    "lib/loader/index.js",
    "lib/suppress/index.cjs",
    "service/**/*.sql",
    "service/**/*.ts"
  ],
  "exclude": [
    "lib/hex/**"
  ],
  "compilerOptions": {
    "paths": {
      "@intertwine/build_/*.ts": ["./lib/build_/*.ts"],
      "@intertwine/crypto/*.ts": ["./lib/crypto/*.ts"],
      "@intertwine/error*.ts": ["./lib/error/*.ts"],
      "@intertwine/local/*.ts": ["./lib/local/*.ts"],
      "@intertwine/random/*.ts": ["./lib/random/*.ts"],
      "@intertwine/test/*.ts": ["./lib/test/*.ts"],
      "@intertwine/time/*.ts": ["./lib/time/*.ts"],
      "@intertwine/widget/*.ts": ["./lib/widget/*.ts"],
      "@/*.sql": ["./service/auth/guest/display/*.sql"],
      "@/*.ts": ["./service/auth/guest/display/*.ts"]
    }
  },
  "references": [
    { "path": "./lib/hex" }
  ]
}
