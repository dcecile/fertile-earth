FROM node:17-slim
WORKDIR /app
COPY .crdb/certs .crdb/certs
COPY build build
COPY node_modules node_modules
ENV NODE_ENV=production
ENV APP_HOST=::
ENV APP_PORT=8080
# FLY_ENV NODE_OPTIONS
# FLY_SECRET_ENV DATABASE_URL_API_READ
# FLY_SECRET_ENV DATABASE_URL_API_WRITE
# FLY_SECRET_ENV FTS_SCHEME
# FLY_SECRET_ENV FTS_HOST
# FLY_SECRET_ENV FTS_PORT
# FLY_SECRET_ENV FTS_PASSWORD
EXPOSE 8080
CMD ["node", "./build/node/app/src/api/index.ts.mjs"]
